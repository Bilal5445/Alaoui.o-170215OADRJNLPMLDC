@model ScrapyWeb.Models.FBApplication
@{
    ViewBag.Title = "Add FB Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add FB Application</h2>

<div class="container">
    
        @using(Html.BeginForm("AddFBApplication","AccountPanel",FormMethod.Post))
        { 
          @Html.HiddenFor(m=>m.ApplicationId)
        <div class="form-group row">
            <label for="lgFormGroupInput" class="col-sm-2 col-form-label col-form-label-lg">App Name</label>
            <div class="col-sm-10">
                @*<input type="text" class="form-control form-control-lg" id="lgFormGroupInput" placeholder="ScrapyWeb">*@
                @Html.TextBoxFor(m => m.ApplicationName, new {@id="txtAppName",@required="required" })          
             </div>
        </div>
        <div class="form-group row">
            <label for="smFormGroupInput" class="col-sm-2 col-form-label col-form-label-sm">APP ID</label>
            <div class="col-sm-10">
                @*<input type="email" class="form-control form-control-sm" id="smFormGroupInput" placeholder="you@example.com">*@
                @Html.TextBoxFor(m => m.FbAppId, new { @id = "txtFBApaId", @required = "required" })
            </div>
        </div>
        <div class="form-group row">
            <label for="smFormGroupInput" class="col-sm-2 col-form-label col-form-label-sm">App Secret</label>
            <div class="col-sm-10">
                @*<input type="email" class="form-control form-control-sm" id="smFormGroupInput" placeholder="you@example.com">*@
                @Html.TextBoxFor(m => m.FbAppSecret, new { @id = "txtFbAppSecret", @required = "required" })
            </div>
        </div>
        
        <div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
       }
    
</div>